<Window x:Class="WpfVideoMediaElement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfVideoMediaElement"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="UrlTextBox" FontSize="20" Height="30" Margin="0 0 10 0"/>
                <StackPanel Orientation="Horizontal" Grid.Column="1">
                    <Button Margin="0 0 10 0" Content="播放" Width="60" Height="30" Click="ButtonBase_OnClick"/>
                    <Button Margin="0 0 10 0" Content="重播" Width="60" Height="30" Click="ButtonBase1_OnClick"/>
                    <Button Margin="0 0 10 0" Content="停止" Width="60" Height="30" Click="ButtonBase2_OnClick"/>
                    <Button Margin="0 0 10 0" Content="文件" Width="60" Height="30" Click="ButtonBase3_OnClick"/>
                </StackPanel>
                
            </Grid>
            <Grid Grid.Row="1" Margin="10 0 10 10" Background="Black">
                <MediaElement x:Name="VideoElement" LoadedBehavior="Manual" 
                              UnloadedBehavior="Stop"
                              HorizontalAlignment="Center" MaxWidth="800" 
                              MaxHeight="450" VerticalAlignment="Center" Margin="0"
                              MediaEnded="VideoElement_MediaEnded" >
                </MediaElement>
            </Grid>
        </Grid>
    </Grid>

</Window>
